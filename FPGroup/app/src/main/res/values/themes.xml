<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FPGroup" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- App Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Typography -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.FPGroup.Button</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.FPGroup.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/button_default</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: user@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/resumeStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume: Not uploaded"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/goToStemJobsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search STEM Jobs"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/goToSavedJobsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Saved Jobs"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Recently Saved Jobs"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentJobsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“Your future is created by what you do today.”"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
